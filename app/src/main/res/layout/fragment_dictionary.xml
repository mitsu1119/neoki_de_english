<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:src="@drawable/pastel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnLocalDic"
        android:layout_width="327dp"
        android:layout_height="258dp"
        android:layout_marginTop="36dp"
        android:background="#0000"

        android:contentDescription="localdicbutton"
        android:src="@drawable/make2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/under" />

    <ImageButton
        android:id="@+id/btnUpload"
        android:layout_width="154dp"
        android:layout_height="146dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="#0000"
        android:contentDescription="uplbutton"
        android:src="@drawable/make2"
        app:layout_constraintEnd_toEndOf="@+id/btnLocalDic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDownload"
        app:layout_constraintTop_toBottomOf="@+id/btnLocalDic" />

    <ImageButton
        android:id="@+id/btnDownload"
        android:layout_width="154dp"
        android:layout_height="146dp"

        android:layout_marginTop="40dp"
        android:background="#0000"
        android:contentDescription="downlbutton"
        android:src="@drawable/make2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/btnLocalDic"
        app:layout_constraintTop_toBottomOf="@+id/btnLocalDic" />

    <ImageView
        android:id="@+id/upView"
        android:layout_width="143dp"
        android:layout_height="92dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/up"
        app:layout_constraintStart_toStartOf="@+id/btnUpload"
        app:layout_constraintTop_toTopOf="@+id/btnUpload" />

    <ImageView
        android:id="@+id/downView"
        android:layout_width="135dp"
        android:layout_height="96dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/down"
        app:layout_constraintStart_toStartOf="@+id/btnDownload"
        app:layout_constraintTop_toTopOf="@+id/btnDownload" />

    <TextView
        android:id="@+id/text_local"
        android:layout_width="405dp"
        android:layout_height="167dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/galindo"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Local    Dictionary"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLocalDic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/galindo"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="Dictionary"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/under"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/under_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/upload"

        android:layout_width="148dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/galindo"
        android:text="Upload"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btnUpload"
        app:layout_constraintTop_toBottomOf="@+id/upView" />

    <TextView

        android:id="@+id/download"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/galindo"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Download"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btnDownload"
        app:layout_constraintTop_toBottomOf="@+id/downView" />

</androidx.constraintlayout.widget.ConstraintLayout>